@model NewsPortalBLL.DTO.AuthorDTO

@{
    ViewData["Title"] = "Delete Author";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white text-center">
            <h1>Delete User</h1>
        </div>
        <div class="card-body bg-light">
            <p>
                <strong>ID:</strong> @Model.Id <br />
                <strong>Username:</strong> @Model.Username <br />
                <strong>Email:</strong> @Model.Email
            </p>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger me-3">Yes, Delete</button>
                    <a href="@Url.Action("Index", "User")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-4">
                    @ViewData["ErrorMessage"]
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Общие стили для фона и элементов */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fa;
    }

    .container {
        max-width: 1000px;
    }

    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
        background-color: #dc3545;
        color: #fff;
    }

    .card-body {
        border-radius: 0 0 10px 10px;
        padding: 25px;
    }

    /* Для кнопок */
    .btn {
        border-radius: 8px;
        padding: 8px 16px;
        font-size: 14px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #4e555b;
        }

    .alert {
        padding: 10px;
        border-radius: 8px;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>
