@model IEnumerable<NewsPortalBLL.DTO.CommentaryDTO>

@{
    ViewData["Title"] = "Comments";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h1>Comments</h1>
        </div>
        <div class="card-body bg-light">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>ArticleId</th>
                        <th>UserId</th>
                        <th>Content</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var comment in Model)
                    {
                        <tr>
                            <td>@comment.id</td>
                            <td>@comment.ArticleId</td>
                            <td>@comment.UserId</td>
                            <td>@comment.content</td>
                            <td>
                                <a href="@Url.Action("Update", "Commentary", new { id = comment.id })" class="btn btn-warning btn-sm">Edit</a>
                                <a href="@Url.Action("Delete", "Commentary", new { id = comment.id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this comment?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a href="/Commentary/Create" class="btn btn-primary btn-sm">Create New Comment</a>
        </div>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fa;
    }

    .container {
        max-width: 1200px;
    }

    .card {
        border-radius: 10px;
        border: 1px solid #ddd;
        background-color: #ffffff;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
        background-color: #007bff;
        color: #fff;
    }

    .card-body {
        border-radius: 0 0 10px 10px;
        padding: 25px;
    }

    /* Стилизация таблицы */
    .table {
        border-radius: 10px;
        border: 1px solid #ddd;
        background-color: #ffffff;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .table th {
        background-color: #f1f1f1;
        color: #333;
        text-align: center;
    }

    .table td {
        text-align: left;
        vertical-align: middle;
    }

    /* Стили кнопок */
    .btn {
        border-radius: 8px;
        padding: 8px 16px;
        font-size: 14px;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-sm {
        padding: 5px 10px;
        font-size: 12px;
    }
</style>
